<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Warehouse Entries

    <a data-toggle="collapse" href="#warehouse_warehouse_entries_new_form">
      Add warehouse entry
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @warehouse.warehouse_entries.each do |warehouse_entry| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/warehouse_entries/<%= warehouse_entry.id %>">
          <%= warehouse_entry.number_outstanding_orders_transport_media %>
        </a>

        <a href="/delete_warehouse_entry_from_warehouse/<%= warehouse_entry.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="warehouse_warehouse_entries_new_form">
        <%= render partial: "warehouse_templates/warehouse_warehouse_entries_new_form" %>
      </div>
    </div>

  </ul>
</div>
