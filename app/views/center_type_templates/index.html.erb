<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All center types
    </h1>

    <a href="/center_types/new" class="btn btn-block btn-outline-secondary">
      Add a new center type
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "center_type_templates/center_types_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @center_types.each do |center_type| %>
      <tr>
        <td>
          <%= center_type.id %>
        </td>

        <td>
          <%= center_type.name %>
        </td>

        <td>
          <%= time_ago_in_words(center_type.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(center_type.updated_at) %> ago
        </td>

        <td>
          <a href="/center_types/<%= center_type.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @center_types, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
