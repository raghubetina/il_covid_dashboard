<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All labs
    </h1>

    <a href="/labs/new" class="btn btn-block btn-outline-secondary">
      Add a new lab
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "lab_templates/labs_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Location name
        </th>

        <th>
          Location
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @labs.each do |lab| %>
      <tr>
        <td>
          <%= lab.id %>
        </td>

        <td>
          <%= lab.location_name %>
        </td>

        <td>
          <%= lab.location %>
        </td>

        <td>
          <%= time_ago_in_words(lab.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(lab.updated_at) %> ago
        </td>

        <td>
          <a href="/labs/<%= lab.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @labs, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
