<% if @lab.errors.any? %>
  <% @lab.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit lab #<%= @lab.id %>
</h1>

<hr>

<form action="/update_lab/<%= @lab.id %>" method="post">

  <div class="form-group">
    <label for="location_name">
      Location name
    </label>

    <input type="text" id="location_name" name="location_name" class="form-control" value="<%= @lab.location_name %>">
  </div>

  <div class="form-group">
    <label for="location">
      Location
    </label>

    <input type="text" id="location" name="location" class="form-control" value="<%= @lab.location %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update lab
  </button>
</form>

<hr>

<a href="/labs">
  Go back
</a>
