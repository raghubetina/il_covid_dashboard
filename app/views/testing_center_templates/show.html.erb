<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Testing center #<%= @testing_center.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/testing_centers" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/testing_centers/<%= @testing_center.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit testing center
        </a>
      </div>

      <div class="col">
        <a href="/delete_testing_center/<%= @testing_center.id %>" class="btn btn-block btn-outline-secondary">
          Delete testing center
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Center type
      </dt>
      <dd>
        <% if @testing_center.center_type.present? %>
          <a href="/center_types/<%= @testing_center.center_type_id %>">
            <%= @testing_center.center_type.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Location name
      </dt>
      <dd>
        <%= @testing_center.location_name %>
      </dd>

      <dt>
        Location
      </dt>
      <dd>
        <%= @testing_center.location %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@testing_center.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@testing_center.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "testing_center_templates/testing_center_testing_center_entries" %>
  </div>
</div>
